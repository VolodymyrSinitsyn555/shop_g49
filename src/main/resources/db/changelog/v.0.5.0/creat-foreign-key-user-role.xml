<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="rename-user-role-table" author="sv">
        <renameTable oldTableName="user-role" newTableName="user_role" />
    </changeSet>

    <changeSet id="create-foreign-key-user-role" author="sv">

        <addForeignKeyConstraint baseTableName="user_role"
                                 baseColumnNames="user_id"
                                 constraintName="fk_user_role_to_user"
                                 referencedTableName="user"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="user_role"
                                 baseColumnNames="role_id"
                                 constraintName="fk_user_role_to_role"
                                 referencedTableName="role"
                                 referencedColumnNames="id"/>

    </changeSet>

</databaseChangeLog>